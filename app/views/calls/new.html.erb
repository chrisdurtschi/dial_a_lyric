<%= form_for @call do |f| %>
  <dl>
    <dd><%= f.label :name %></dd>
    <dt><%= f.text_field :name %></dt>
    <dd><%= f.label :number %></dd>
    <dt><%= f.text_field :number, :type => 'number', :min => 1111111111, :max => 9999999999 %></dt>

    <dd class="search"><%= label_tag :artist_query, 'Search for an Artist' %></dd>
    <dt class="search">
      <%= text_field_tag :artist_query %>
      <button class="search" type="button">Search</button>
    </dt>

    <dd class="artists">Artists</dd>
    <dt class="artists"></dt>
    <dd class="albums">Albums</dd>
    <dt class="albums"></dt>
    <dd class="songs"><%= f.label :lyric_url, 'Songs' %></dd>
    <dt class="songs"><%= f.select :lyric_url, [] %></dt>

    <dt><%= f.hidden_field :lyric_url %>

    <dt><%= f.submit 'Send Lyric' %>
  </dl>
<% end %>
